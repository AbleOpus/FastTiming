<Window x:Class="FastTimingDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FastTimingDemo"
        mc:Ignorable="d"
        Title="FastTiming Demo" Height="166" Width="289" ResizeMode="NoResize">
    <Grid>
        <CheckBox x:Name="CheckBoxEnabled" Content="Enabled" HorizontalAlignment="Right" Margin="0, 0,10,10" VerticalAlignment="Bottom" Checked="CheckBoxEnabled_Checked" Unchecked="CheckBoxEnabled_Unchecked"/>
        <Label x:Name="LabelText" FontSize="30" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Content="00:00:00" HorizontalAlignment="Stretch" Margin="10,10,10,30" VerticalAlignment="Stretch"/>

    </Grid>
</Window>
